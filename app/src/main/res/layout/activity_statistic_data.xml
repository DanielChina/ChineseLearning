<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context="test.zx.learnwords.StatisticDataActivity">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/historic_words_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_show_size"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/test_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_show_size"
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="180dp" />
        <TextView
            android:id="@+id/fault_words_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_show_size"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="136dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fault_words_details"
            android:textSize="@dimen/text_show_size" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>
